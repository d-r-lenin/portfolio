{
  "name": "client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy:pictures": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:js": "copyfiles -u 1 ./src/js/**/* public",
    "copy:css": "copyfiles -u 1 ./src/css/**/* public",
    "copy:json": "copyfiles -u 1 ./src/json/**/* public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange src/*.html -- npm run copy:html",
    "watch:pictures": "onchange ./src/assets/**/* -- npm run copy:pictures",
    "watch:js": "onchange ./src/js/**/* -- npm run copy:js",
    "watch:css": "onchange ./src/css/**/* -- npm run copy:css",
    "watch:json": "onchange ./src/json/**/* -- npm run copy:json",
    "watch:sass": "sass  --no-source-map --watch src/sass/style.scss:public/css/style.css",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "ohtml": "rapidpreview  --port 3003 --file index.html --path ./public",
    "start": "npm-run-all copy --parallel watch ohtml",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.10",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "rapid-preview": "^1.0.4",
    "sass": "^1.49.8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
